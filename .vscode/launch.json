  "version": "0.2.0",
  "configurations": [
    /* ------ SERVER CONFIG ------ */
    {
      "name": "(gdb) Launch - Server",
      "type": "cppdbg",
      "preLaunchTask": "clean & build all",
      "request": "launch",
      "program": "${workspaceFolder}/server",
      "args": [],
      "stopAtEntry": true,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
    /* ------ CLIENT CONFIG ------ */
    {
      "name": "(gdb) Launch - Client",
      "type": "cppdbg",
      "preLaunchTask": "clean & build all",
      "request": "launch",
      "program": "${workspaceFolder}/client",
      "args": [
        "localhost"
      ],
      "stopAtEntry": true,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Set Disassembly Flavor to Intel",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        }
      ]
    },
  ]
}
