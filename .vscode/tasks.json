{
  "tasks": [
    // "all" tasks (server & client together)
    {
      "label": "clean all",
      "type": "cppbuild",
      "command": "make",
      "args": [
        "clean"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "label": "build all",
      "type": "cppbuild",
      "command": "make",
      "args": [
        "all"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "label": "clean & build all",
      "dependsOrder": "sequence",
      "dependsOn": [
        "clean all",
        "build all"
      ]
    },

    // "server" only tasks
    {
      "label": "clean server",
      "type": "shell",
      "command": "rm",
      "args": [
        "-fr",
        "*.o",
        "server"
      ]
    },
    {
      "label": "build server",
      "type": "cppbuild",
      "command": "make",
      "args": [
        "server"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "label": "clean & build server",
      "dependsOrder": "sequence",
      "dependsOn": [
        "clean server",
        "build server"
      ]
    },

    // "client" only tasks
    {
      "label": "clean client",
      "type": "shell",
      "command": "rm",
      "args": [
        "-fr",
        "*.o",
        "client"
      ]
    },
    {
      "label": "build client",
      "type": "cppbuild",
      "command": "make",
      "args": [
        "client"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "detail": "Task generated by Debugger."
    },
    {
      "label": "clean & build client",
      "dependsOrder": "sequence",
      "dependsOn": [
        "clean client",
        "build client"
      ]
    },
  ],
  "version": "2.0.0"
}
